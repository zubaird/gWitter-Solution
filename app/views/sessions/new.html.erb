<h1>Sign in here!</h1>
<%= form_tag signin_path class: "navbar-form navbar-left search-form" do %>
  <div class="form-group">
    <%= label_tag :email, nil, class:"control-label" %>:  
    <%= email_field_tag :email, "", class:"form-label" %>
  </div>

  <div class="form-group">
    <%= label_tag :password, nil, class:"control-label" %>:
    <%= password_field_tag :password, "", class:"form-label" %>
  </div>

  <%= submit_tag "Sign in", id:"submit-user", class:"btn btn-info" %>

<% end %>
